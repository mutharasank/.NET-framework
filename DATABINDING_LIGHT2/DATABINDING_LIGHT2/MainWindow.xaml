<Window x:Class="DataBinding_Light2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="MainWindow" Height="200" Width="300">
    <Grid>
        <StackPanel DataContext="{Binding ElementName=y:novels}">
            <ListBox Name="ListBox1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Author" Width="60" Margin="0,0,10,0" Click="Button_Click_1"/>
                <Button Content="Title" Width="60" Margin="0,0,10,0" Click="Button_Click_2"/>
                <Button Content="Intet" Width="60" Margin="0,0,10,0" Click="Button_Click_3"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
