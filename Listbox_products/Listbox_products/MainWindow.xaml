<Window x:Class="Listbox_products.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded_1">

    <Grid Name="grid1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="295*"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="lBoxProducts" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200" Margin="5,5,0,5.4" />
        <StackPanel Grid.Column="1" Margin="5">
            <RadioButton Content="ToString" HorizontalAlignment="Left" Margin="5" Checked="RBtnToString_Checked"/>
            <RadioButton Content="NrAndName"  Margin="5" HorizontalAlignment="Left" Width="83" Checked="RBtnNrAndName_Checked" IsChecked="True"/>
            <Button Name="BtnSelctedItem" Content="SelectedItem" Width="100" HorizontalAlignment="Left" Margin="5" 
                    Click="BtnSelctedItem_Click"/>
            <Button Name="BtnSelctedValue" Content="SelectedValue" Width="100" HorizontalAlignment="Left" Margin="5" 
                    Click="BtnSelectedValue_Click"/>
        </StackPanel>
    </Grid>
</Window>
