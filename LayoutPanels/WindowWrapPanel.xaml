        <CheckBox Height="16" Name="checkBox2" >CheckBox</CheckBox>
        <Button Height="23" Name="button2" Padding="2" Width="75">Button</Button>
        <Button Height="23" Name="button3" Width="150">Button</Button>
        <Button Height="23" Name="button4" Width="75" >Button</Button>
        <Button Height="23" Name="button5" Width="75">Button</Button>
        <RadioButton Height="16" Name="radioButton1" Width="120">RadioButton</RadioButton>
        <RadioButton Height="16" Name="radioButton2" Width="120">RadioButton</RadioButton>
        <RadioButton Height="16" Name="radioButton3" Width="120">RadioButton</RadioButton>
        <RadioButton Height="16" Name="radioButton4" Width="120">RadioButton</RadioButton>
    </WrapPanel>
</Window>
